{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"],
            "@routes/*": ["./routes/*"],
            "@controller/*": ["./controller/*"],
            "@middleware/*": ["./middleware/*"],
            "@secret/*": ["./secret/*"],
            "@prisma/*": ["./prisma/*"]
        }
    },
    "include": [
        "/**/*" 
    ],
}